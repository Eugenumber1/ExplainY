{
  "manifest_version": 3,
  "name": "ExplainY",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "dist/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/content.js"]
    }
  ],
  "action": {
    "default_popup": "dist/popup/popup.html",
    "default_icon": "icon.png"
  }
}